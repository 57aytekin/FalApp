<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="1dip" android:color="@color/purple_700" />
            <gradient android:angle="-90" android:startColor="@color/purple_700" android:endColor="@color/purple_700"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="@color/purple_500" />
            <gradient android:angle="-90" android:startColor="@color/purple_500" android:endColor="@color/purple_500" />
        </shape>
    </item>
</selector>